<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dark_cyan"
    android:fitsSystemWindows="true"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="248dp"
        android:layout_height="187dp"
        android:elevation="5dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/newmenulogo"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/australite"
        android:letterSpacing="0.1"
        android:text="menu"
        android:textColor="@color/yellow_orange"
        android:textSize="105sp"
        android:layout_marginVertical="10dp"/>

    <EditText

        android:id="@+id/input_email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/rounded_border"
        android:baselineAligned="false"
        android:fontFamily="sans-serif"
        android:hint="Email"
        android:ems="10"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:drawableRight="@drawable/ic_email"
        android:textColorHint="#3d3a33"
        android:textSize="18sp"
        android:typeface="normal"
        android:layout_marginVertical="5dp"/>

    <EditText
        android:id="@+id/input_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_border"
        android:drawableRight="@drawable/ic_person"
        android:fontFamily="sans-serif"
        android:hint="Username"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="#3d3a33"
        android:textSize="18sp"
        android:typeface="normal"
        android:layout_marginVertical="5dp"/>

    <EditText
        android:id="@+id/input_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_border"
        android:drawableRight="@drawable/ic_lock"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Password"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="#3d3a33"
        android:textSize="18sp"
        android:typeface="normal"
        android:layout_marginVertical="5dp"/>

    <Button
        android:id="@+id/link_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginVertical="5dp"
        android:background="@color/transparent"
        android:fontFamily="@font/airbnbcereallight"
        android:gravity="center"
        android:onClick="goToLogin"
        android:text="Already a member? Log In"
        android:textColor="@color/white"
        android:textSize="18dp" />

    <Button
        android:id="@+id/btn_signup"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:background="@drawable/signupbutton"
        android:clickable="true"
        android:fontFamily="@font/airbnbcerealbold"
        android:padding="12dp"
        android:text="Create an Account"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:layout_marginVertical="10dp"/>

</LinearLayout>
