<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@color/dark_cyan"
    android:fitsSystemWindows="true"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="212dp"
        android:layout_height="168dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="88dp"
        android:layout_marginTop="7dp"
        android:layout_marginEnd="84dp"
        app:srcCompat="@drawable/newmenulogo" />

    <EditText

        android:id="@+id/input_name"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="90dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="188dp"
        android:background="@drawable/rounded_border"
        android:fontFamily="sans-serif"
        android:hint="Username"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="#3d3a33"
        android:textSize="18sp"
        android:typeface="normal" />

    <EditText

        android:id="@+id/input_email"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginTop="10dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="246dp"
        android:background="@drawable/rounded_border"
        android:baselineAligned="false"
        android:fontFamily="sans-serif"
        android:hint="Email"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="#3d3a33"
        android:textSize="18sp"
        android:typeface="normal" />

    <EditText

        android:id="@+id/input_password"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="41dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="130dp"
        android:background="@drawable/rounded_border"
        android:drawableRight="@drawable/ic_action_pass"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Password"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="#3d3a33"
        android:textSize="18sp"
        android:typeface="normal" />

    <!-- Signup Button -->

    <Button
        android:id="@+id/btn_signup"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="300dp"
        android:layout_height="60dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="45dp"
        android:layout_marginEnd="39dp"
        android:layout_marginBottom="16dp"
        android:background="@drawable/signupbutton"
        android:clickable="true"
        android:fontFamily="@font/airbnbcerealbold"
        android:padding="12dp"
        android:text="Create an Account"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="24sp" />

    <TextView
        android:id="@+id/textView12"
        android:layout_width="254dp"
        android:layout_height="155dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="65dp"
        android:layout_marginTop="126dp"
        android:layout_marginEnd="65dp"
        android:layout_marginBottom="321dp"
        android:elevation="5dp"
        android:fontFamily="@font/brusherreg"
        android:letterSpacing="-0.04"
        android:text="menu"
        android:textColor="@color/white"
        android:textSize="130sp"
        android:textStyle="italic" />

    <TextView
        android:id="@+id/link_login"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="88dp"
        android:layout_marginEnd="85dp"
        android:layout_marginBottom="85dp"
        android:fontFamily="@font/airbnbcereallight"
        android:text="Already a member? Log In"
        android:textColor="@color/white"
        android:textSize="18dp" />

</RelativeLayout>
