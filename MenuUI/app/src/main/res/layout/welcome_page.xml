<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/orangetbl"
    android:orientation="vertical"
    android:padding="15dp"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="wrap_content"
        android:layout_height="214dp"
        android:elevation="15dp"
        android:layout_marginVertical="10dp"
        app:srcCompat="@drawable/newmenulogo"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:elevation="10dp"
        android:fontFamily="@font/leiralite"
        android:text="menu"
        android:textColor="@color/bright_orange"
        android:textSize="142sp"
        android:textStyle="bold"
        android:layout_marginVertical="10dp"/>

    <TextView
        android:id="@+id/textView11"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/leafy"
        android:text="HUNGRY? Let's eat!"
        android:textAllCaps="false"
        android:textColor="@color/white"
        android:textSize="45sp"
        android:textStyle="bold"
        android:layout_marginVertical="5dp"/>

    <Button
        android:id="@+id/login_button"
        android:layout_width="321dp"
        android:layout_height="wrap_content"
        android:background="@drawable/background_login"
        android:clickable="true"
        android:fontFamily="@font/airbnbcerealbold"
        android:onClick="sendToLogin"
        android:padding="17dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="26sp" />

    <Button
        android:id="@+id/register_button"
        android:layout_width="319dp"
        android:layout_height="wrap_content"
        android:layout_marginVertical="10dp"
        android:layout_marginTop="480dp"
        android:background="@drawable/background_signup"
        android:clickable="true"
        android:fontFamily="@font/airbnbcerealbold"
        android:onClick="sendToRegister"
        android:padding="15dp"
        android:text="Sign Up"
        android:textAllCaps="false"
        android:textColor="#fff"
        android:textSize="26sp" />


</LinearLayout>