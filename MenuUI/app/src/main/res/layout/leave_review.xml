<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/sage"
    android:orientation="vertical"
    tools:context=".LeaveReview"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="248dp"
        android:layout_height="187dp"
        android:elevation="5dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/newmenulogo"/>

    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/leafy"
        android:shadowColor="@color/light_gray"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="Review Your Dish: "
        android:textSize="50dp"
        android:layout_marginVertical="10dp"/>

    <TextView
        android:id="@+id/review_dish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/airbnbcerealbold"
        android:gravity="center"
        android:singleLine="true"
        android:textColor="@color/nav_red"
        android:textSize="30sp"
        android:layout_marginBottom="10dp"/>

    <Switch
        android:id="@+id/recommend_switch"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/airbnbcerealbold"
        android:shadowColor="@color/firefly"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="Would you recommend?"
        android:textColor="@color/white"
        android:textOff="No"
        android:textOn="Yes"
        android:textSize="24sp"
        android:thumbTint="@color/nav_red"
        android:trackTint="@color/nav_red"
        android:layout_marginVertical="5dp"/>

    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:progressTint="@color/nav_red"
        android:layout_marginVertical="5dp"/>

    <EditText
        android:id="@+id/review_edit_text"
        android:layout_width="326dp"
        android:layout_height="157dp"
        android:background="@drawable/round_review_text"
        android:elevation="5dp"
        android:fontFamily="@font/airbnbcereallight"
        android:gravity="top|left"
        android:hint="Enter review text"
        android:inputType="text|textMultiLine"
        android:lines="10"
        android:maxLines="15"
        android:minLines="5"
        android:padding="10dp"
        android:textStyle="bold"
        android:layout_marginVertical="10dp"/>

    <Button
        android:id="@+id/submit_review"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:background="@drawable/review_button"
        android:clickable="true"
        android:fontFamily="@font/airbnbcerealbold"
        android:padding="12dp"
        android:text="Submit Review"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="24sp"
        android:layout_marginVertical="10dp"/>

</LinearLayout>