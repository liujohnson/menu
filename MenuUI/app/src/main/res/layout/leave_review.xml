<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".LeaveReview"
    android:background="@color/sage">

    <TextView
        android:id="@+id/review_dish_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_marginStart="39dp"
        android:layout_marginTop="160dp"
        android:fontFamily="@font/airbnbcerealbold"
        android:gravity="center"
        android:layout_centerHorizontal="true"
        android:singleLine="true"
        android:textColor="@color/nav_red"
        android:textSize="30sp" />
    <Switch
        android:id="@+id/recommend_switch"
        android:layout_width="343dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/textView8"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_marginHorizontal="10dp"
        android:thumbTint="@color/nav_red"
        android:trackTint="@color/nav_red"
        android:layout_marginStart="23dp"
        android:layout_marginTop="67dp"
        android:layout_marginEnd="18dp"
        android:layout_marginRight="18dp"
        android:fontFamily="@font/airbnbcerealbold"
        android:shadowColor="@color/firefly"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="Would you recommend?"
        android:textColor="@color/white"
        android:textOff="No"
        android:textOn="Yes"
        android:textSize="24sp" />
    <!--</LinearLayout>-->


    <RatingBar
        android:id="@+id/rating_bar"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_gravity="center"
        android:progressTint="@color/nav_red"
        android:layout_marginStart="72dp"
        android:layout_marginTop="259dp"
        android:layout_marginEnd="72dp" />

    <Button
        android:id="@+id/submit_review"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="278dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginStart="55dp"
        android:layout_marginTop="20dp"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="11dp"
        android:background="@drawable/review_button"
        android:clickable="true"
        android:fontFamily="@font/airbnbcerealbold"
        android:padding="12dp"
        android:text="Submit Review"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="24sp" />


    <TextView
        android:id="@+id/textView8"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_gravity="center"
        android:layout_marginStart="46dp"
        android:layout_marginTop="102dp"
        android:fontFamily="@font/leafy"
        android:shadowColor="@color/light_gray"
        android:shadowDx="1"
        android:shadowDy="1"
        android:shadowRadius="1"
        android:text="Review Your Dish: "
        android:textSize="50dp" />

    <ImageView
        android:id="@+id/imageView6"
        android:layout_width="259dp"
        android:layout_height="103dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="0dp"
        android:layout_marginEnd="63dp"
        app:srcCompat="@drawable/newmenulogo" />

    <EditText
        android:id="@+id/review_edit_text"
        android:layout_width="326dp"
        android:layout_height="157dp"
        android:layout_alignStart="@+id/imageView6"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center"
        android:layout_marginStart="-32dp"
        android:layout_marginBottom="82dp"
        android:background="@drawable/round_review_text"
        android:elevation="5dp"
        android:fontFamily="@font/airbnbcereallight"
        android:gravity="top|left"
        android:hint="Enter review text"
        android:inputType="text|textMultiLine"
        android:lines="10"
        android:maxLines="15"
        android:minLines="5"
        android:padding="10dp"
        android:textStyle="bold" />

</RelativeLayout>