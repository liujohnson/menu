<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <Button
        android:id="@+id/verify_pass"
        style="@style/Base.TextAppearance.AppCompat.Body1"
        android:layout_width="270dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="64dp"
        android:layout_marginEnd="50dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/btn_verify"
        android:clickable="true"
        android:fontFamily="@font/airbnbcerealbold"
        android:padding="10dp"
        android:text="VERIFY"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="30sp"
        tools:layout_editor_absoluteX="50dp"
        tools:layout_editor_absoluteY="487dp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="39dp"
        android:layout_marginEnd="43dp"
        android:layout_marginBottom="227dp"
        android:text="We've sent a unique code that you"
        android:textSize="20sp"
        tools:layout_editor_absoluteX="41dp"
        tools:layout_editor_absoluteY="355dp" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="28dp"
        android:layout_alignEnd="@+id/textView5"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="1dp"
        android:layout_marginBottom="199dp"
        android:text="can use to confirm your account."
        android:textSize="20sp"
        tools:layout_editor_absoluteX="49dp"
        tools:layout_editor_absoluteY="379dp" />

    <ImageView
        android:id="@+id/verify_header"
        android:layout_width="399dp"
        android:layout_height="306dp"
        android:layout_alignStart="@+id/verify_pass"
        android:layout_alignParentTop="true"
        android:layout_marginStart="-71dp"
        android:layout_marginTop="0dp"
        android:background="@drawable/verify_anim" />

    <TextView
        android:id="@+id/thankyoutext"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="34dp"
        android:layout_marginEnd="15dp"
        android:fontFamily="@font/airbnbcerealbold"
        android:text="Thanks for signing up!"
        android:textColor="@color/light_blue"
        android:textSize="33sp" />

    <com.raycoarana.codeinputview.CodeInputView
        android:id="@+id/code_verify"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="12dp"
        android:layout_marginTop="370dp"
        android:layout_marginEnd="12dp"
        android:contextClickable="true"
        android:fontFamily="@font/airbnbcereallight"
        app:animate_on_complete="false"
        app:code_text_color="@color/light_blue"
        app:code_text_margin_bottom="10dp"
        app:code_text_size="40dp"
        app:error_color="@color/nav_red"
        app:input_type="numeric"
        app:length_of_code="6"
        app:password_mode="false"
        app:underline_color="@color/light_gray"
        app:underline_selected_color="@color/bright_salmon"
        app:underline_stroke_width="3dp"
        app:underline_width="53dp" />

</RelativeLayout>