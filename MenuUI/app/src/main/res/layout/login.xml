<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/firefly"
    android:orientation="vertical"
    android:gravity="center">

    <ImageView
        android:id="@+id/imageView8"
        android:layout_width="248dp"
        android:layout_height="187dp"
        android:elevation="5dp"
        android:layout_marginTop="10dp"
        app:srcCompat="@drawable/newmenulogo"/>

    <TextView
        android:id="@+id/textView12"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/brusherreg"
        android:text="menu"
        android:textColor="@color/bright_plum"
        android:textSize="142sp"
        android:textStyle="italic"/>

    <EditText
        android:id="@+id/username"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_border"
        android:drawableRight="@drawable/ic_person"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Username"
        android:inputType="textPersonName"
        android:padding="10dp"
        android:textColorHint="#3d3a33"
        android:textSize="18sp"
        android:typeface="normal"
        android:layout_marginVertical="10dp"/>

    <EditText
        android:id="@+id/passText"
        android:layout_width="300dp"
        android:layout_height="50dp"
        android:background="@drawable/rounded_border"
        android:drawableRight="@drawable/ic_lock"
        android:ems="10"
        android:fontFamily="sans-serif"
        android:hint="Password"
        android:inputType="textPassword"
        android:padding="10dp"
        android:textColorHint="#3d3a33"
        android:textSize="18sp"
        android:typeface="normal"
        android:layout_marginVertical="10dp"/>

    <TextView
        android:id="@+id/fyp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/airbnbcereallight"
        android:text="Forgot your password?"
        android:textColor="@color/white"
        android:textSize="18sp"
        android:layout_marginVertical="5dp"/>


    <Button
        android:id="@+id/login_button"
        android:layout_width="300dp"
        android:layout_height="65dp"
        android:background="@drawable/loginbutton"
        android:clickable="true"
        android:fontFamily="@font/airbnbcerealbold"
        android:padding="12dp"
        android:text="Login"
        android:textAllCaps="false"
        android:textColor="#ffffff"
        android:textSize="26sp"
        android:layout_marginVertical="10dp"/>

</LinearLayout>